<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/appsBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/JHPenerbangan"
                android:layout_marginLeft="20dp"
                android:text="12 Nov 2022"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Rp.700.000"
                android:layout_marginRight="2dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/logopesawat"
                android:layout_below="@+id/JHPenerbangan"
                android:src="@drawable/pesawatoren"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

            <TextView
                android:layout_below="@+id/JHPenerbangan"
                android:layout_toRightOf="@+id/logopesawat"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="Makasar - Semarang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnSelesai"
                android:layout_below="@+id/logopesawat"
                android:layout_marginLeft="8dp"
                android:backgroundTint="@color/hijau"
                android:layout_marginTop="10dp"
                android:text="Selesai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/logopesawat"
                android:layout_marginLeft="251dp"
                android:layout_marginTop="32dp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:text="Detail >"
                android:textColor="@color/oren" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>